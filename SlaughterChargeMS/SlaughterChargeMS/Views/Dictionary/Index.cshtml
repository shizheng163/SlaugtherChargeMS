@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>字典信息</title>

    <link rel="stylesheet" type="text/css" href="~/Scripts/Jquery-easyui/themes/bootstrap/easyui.css" />
    <link rel="stylesheet" type="text/css" href="~/Scripts/Jquery-easyui/themes/icon.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/default.css" />
    <script type="text/javascript" src="~/Scripts/Jquery-easyui/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Jquery-easyui/jquery.easyui.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Jquery-easyui/locale/easyui-lang-zh_CN.js"></script>
     <script src="~/Scripts/Utility/Common.js"></script>
    <script src="~/Scripts/Dictionary/Dictionary.js"></script>
    <script>
        window.onload = function () {
            $('#loading-mask').fadeOut();
        }
    </script>
</head>
<body>
    <div id="loading-mask" style="position:absolute;top:0px; left:0px; width:100%; height:100%; background:#D2E0F2; z-index:20000">
        <div id="pageloading" style="position:absolute; top:50%; left:50%; margin:-120px 0px 0px -120px; text-align:center;  border:2px solid #8DB2E3; width:200px; height:40px;  font-size:14px;padding:10px; font-weight:bold; background:#fff; color:#15428B;">
            <img src="~/Images/loading.gif" align="middle" /> 正在加载中,请稍候...
        </div>
    </div>
    <div class="easyui-layout" style="width: auto;" id="Pdiv" fit="true">

        <div data-options="region:'west',split:true" title="字典类别" style="width: 250px;" id="divWest">
            <table id="dg" class="easyui-datagrid" data-options="iconCls:'icon-view'" style="height:100%;"></table>
        </div>

        <div data-options="region:'center',title:'字典信息',iconCls:'icon-ok'" style="width: auto;" id="divCenter">
            <table id="dg2" class="easyui-datagrid" data-options="iconCls:'icon-view'" style="height:100%"></table>            
        </div>
    </div>

    <!--增加或修改窗口，默认隐藏-->
    <div id="DivAdd" class="easyui-window" title="字典设置" collapsible="false" minimizable="false" data-options="modal:true,closed:true"
        maximizable="false" icon="icon-save" style="width: 500px; height: 250px; padding: 5px; background: #fafafa;">
        <div class="easyui-layout" fit="true">
            <div region="center" border="false" style="padding: 10px; background: #fff; border: 1px solid #ccc;">
                <table>
                    <tr style="padding-top: 55px;">

                        <td style="width: 80px;">
                            <label style="color: red">*</label>编号：
                        </td>
                        <td style="width: 170px;">

                            <input class="easyui-textbox" style="width: 120px;" id="Code" name="Code">
                        </td>

                        <td style="width: 80px;">
                            <label style="color: red">*</label>名称：
                        </td>
                        <td style="width: 170px;">

                            <input class="easyui-textbox" style="width: 120px;" id="Name" name="Name">
                        </td>
                    </tr>

                    <tr style="padding-top: 55px;">

                        <td style="width: 80px;">备注：
                        </td>
                        <td style="width: 170px;" colspan="3">

                            <input class="easyui-textbox" style="width: 340px;" id="Remark" name="Remark">
                        </td>
                    </tr>
                    
                </table>
            </div>
            <div region="south" border="false">
                <div style="text-align: right; padding-top: 10px">
                    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" onclick="SaveEntity()">确定</a>
                    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#DivAdd').dialog('close')">关闭</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
